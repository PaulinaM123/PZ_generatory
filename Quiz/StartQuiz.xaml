<UserControl x:Class="PZ_generatory.Quiz.StartQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PZ_generatory"
             mc:Ignorable="d" 
             Height="550" Width="auto" Background="White">

    <StackPanel HorizontalAlignment="Center" x:Name="StackGrid">
        <Label FontSize="35" Foreground="#FF224BB6" HorizontalContentAlignment="Center" >
            Zasady Quizu
        </Label>
        <Label Margin="100,30" FontSize="25" Foreground="#FF224BB6">
            <TextBlock TextAlignment="Left" TextWrapping="Wrap">
                1. Każde pytania ma określony czas na odpowiedź.<LineBreak/>
                2. Pytania może mieć więcej niz jedną poprawną odpowiedź.<LineBreak/>
                3. Nie można wracać do poprzednich pytań.<LineBreak/>
            </TextBlock>
        </Label>
        <Button Height="100" Margin="100,100" Click="Button_Click">
            <TextBlock TextAlignment="Center" FontSize="40" Text="Rozpocznij Quiz" TextWrapping="Wrap" />
        </Button>
    </StackPanel>
</UserControl>
